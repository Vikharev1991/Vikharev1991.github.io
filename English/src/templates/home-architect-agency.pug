            h3.widget-title Social
            a(href='#' data-toggle='tooltip' title='Facebook').social-btn.sb-style-6.sb-facebook
              i.socicon-facebook
            a(href='#' data-toggle='tooltip' title='Twitter').social-btn.sb-style-6.sb-twitter
              i.socicon-twitter
            a(href='#' data-toggle='tooltip' title='YouTube').social-btn.sb-style-6.sb-youtube
              i.socicon-youtube
            a(href='#' data-toggle='tooltip' title='Instagram').social-btn.sb-style-6.sb-instagram
              i.socicon-instagram
  
  // Contact Form
  section.container.position-relative(style='margin-bottom: -110px; z-index: 5;')
    .wizard
      .wizard-body.pt-3
        h2.h4.text-center Drop us a line
        p.text-muted.text-center We will get back to you as soon as possible
        form(novalidate).needs-validation
          .row.pt-3
            .col-sm-6
              .form-group
                label(for='contact-name') Your Name <span class='text-danger font-weight-medium'>*</span>
                input(type='text' id='contact-name' placeholder='John Doe' required).form-control
                .invalid-feedback Please enter your name!
            .col-sm-6
              .form-group
                label(for='contact-email') Your Email <span class='text-danger font-weight-medium'>*</span>
                input(type='email' id='contact-email' placeholder='johndoe@email.com' required).form-control
                .invalid-feedback Please provide a valid email address!
          .row
            .col-sm-6
              .form-group
                label(for='contact-subject') Subject
                input(type='text' id='contact-subject' placeholder='Provide short title of you request').form-control
            .col-sm-6
              .form-group
                label(for='contact-file') Attachment
                .custom-file
                  input(type='file' id='contact-file').custom-file-input
                  label(for='contact-file').custom-file-label Choose file...
          .form-group
            label(for='contact-message') Message <span class='text-danger font-weight-medium'>*</span>
            textarea(rows='7' id='contact-message' placeholder="Let us know more what's on your mind..." required).form-control
            .invalid-feedback Please write a message!
          .text-center
            button(type='submit').btn.btn-style-5.btn-primary Send Message
  
  // Footer
  footer.bg-dark.pt-5.pb-4
    .container.pt-5
