  section.pt-5.pb-md-3
    .container.pt-3
      .row
        .col-md-4
          .widget
            h3.widget-title Contact
            ul.list-icon
              li
                i.fe-icon-phone
                a(href='tel:+1212477690000').navi-link +1 (212) 477 690 000
              li
                i.fe-icon-mail
                a(href='mailto:contact@example.com').navi-link contact@example.com
