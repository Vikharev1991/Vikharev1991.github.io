          img(src='img/homepages/architect-agency/hero.jpg' alt='Architectural Agency').d-block.mx-auto.ml-lg-auto.mr-lg-0
  
  // Intro Video + Steps
  section.mt-n5.mt-lg-0
    .d-none.d-lg-block(style='margin-top: -8rem;')
    .container-fluid.pb-5
      .row
        .col-xl-5.offset-xl-1.col-lg-6
          .bg-white.box-shadow.position-relative.p-3.mx-auto(style='max-width: 45rem;')
